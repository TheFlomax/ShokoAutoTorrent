# Shoko Server Configuration
SHOKO_URL=https://shoko.example.com/api/v3/
SHOKO_API_KEY=your_shoko_api_key_here

# qBittorrent Configuration
QBIT_URL=https://qbit.example.com/
QBIT_USERNAME=your_qbittorrent_username
QBIT_PASSWORD=your_qbittorrent_password
# Note: Si votre mot de passe contient un $, Ã©chappez-le avec $$ (ex: pass$$word)
# qBittorrent behavior
QBIT_TAG_ENABLED=true
QBIT_TAG_VALUE=ShokoAT
QBIT_CATEGORY_ENABLED=true

# Download Path Configuration
# This should match the path structure accessible by qBittorrent
SAVE_ROOT=/data/anime

# Application behavior
# Default is dry-run; set to "false" to actually add torrents to qBittorrent
DRY_RUN=true

# Internal scheduler interval (in hours). Default 24 if unset.
# Set to 0 or negative to run once and exit.
SCHEDULE_INTERVAL_HOURS=24

# Discord Bot Configuration (optional)
# Leave DISCORD_BOT_TOKEN empty to disable Discord bot
DISCORD_BOT_TOKEN=
DISCORD_CHANNEL_ID=
DISCORD_ALLOWED_USER_IDS=
DISCORD_LANGUAGE=en
INTERNAL_API_URL=http://localhost:8765
